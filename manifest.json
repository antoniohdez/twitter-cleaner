{
    "manifest_version": 2,
   
    "name": "Twitter Cleaner",
    "version": "0.1.0",
    "description": "Clean your Twitter timeline and show tweets only from people you follow.",
   
    "content_scripts": [{
      "css": ["css/style.css"],
      "js": ["js/main.js"],
      "matches": ["https://twitter.com/"],
      "run_at": "document_end"
    }],

    "browser_action": {
        "default_popup": "popup.html"
    },

    "icons": {
        "128": "images/twitter-icon-128x128.png"
    }
}